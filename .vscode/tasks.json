{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build all files in src",
            "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "src/*.c",  // Compila tutti i file .c nella directory src
                "-o",
                "${workspaceFolder}/main.exe"  // Output del file eseguibile
            ],
            "options": {
                "cwd": "${workspaceFolder}"  // Directory di lavoro corrente
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
